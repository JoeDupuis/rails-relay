<h1>New Server</h1>

<%= form_with model: @server do |form| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @server.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :port %>
    <%= form.number_field :port, value: @server.port || 6697 %>
  </div>

  <div>
    <%= form.label :ssl %>
    <%= form.check_box :ssl, checked: @server.ssl.nil? ? true : @server.ssl %>
  </div>

  <div>
    <%= form.label :nickname %>
    <%= form.text_field :nickname %>
  </div>

  <div>
    <%= form.submit "Create Server" %>
  </div>
<% end %>
