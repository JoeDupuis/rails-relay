<div class="servers-index">
  <% if @servers.any? %>
    <% @servers.each do |server| %>
      <%= turbo_stream_from server %>
      <%= render "servers/index_server_section", server: server %>
    <% end %>
  <% else %>
    <div class="empty">
      <p>No servers yet.</p>
      <%= link_to "Add your first server", new_server_path, class: "button -primary" %>
    </div>
  <% end %>

  <% if @servers.any? %>
    <%= link_to "Add Server", new_server_path, class: "button" %>
  <% end %>
</div>
